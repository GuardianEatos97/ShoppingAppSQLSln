<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ShoppingAppSQL.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ShoppingAppSQL.Models"
    Shell.FlyoutBehavior="Disabled"
    Title="ShoppingAppSQL">

    <TabBar>
        <Tab Title="HOME"
             Icon="housetab.png">

            <ShellContent
                Title="FOOD"
                ContentTemplate="{DataTemplate local:FoodPage}" />

        </Tab>
        <ShellContent
            Title="SEARCH"
            Icon="searchtab.png"
            ContentTemplate="{DataTemplate local:SearchPage}" />

        <ShellContent
            Title="SHOPPING CART"
            Icon="baskettab.png"
            ContentTemplate="{DataTemplate local:CartPage}" />
        
        <ShellContent
            Title="PROFILE"
            Icon="profiletab.png"
            ContentTemplate="{DataTemplate local:ProfilePage}"/>
    </TabBar>

</Shell>