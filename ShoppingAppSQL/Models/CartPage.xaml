<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingAppSQL.Models.CartPage"
             xmlns:DataBaseItems="clr-namespace:ShoppingAppSQL.DataBaseItems">

    <ContentPage.BindingContext>
        <DataBaseItems:CartViewModel/>
    </ContentPage.BindingContext>

    <StackLayout>
        <ListView ItemsSource="{Binding CartItems}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding Product.FoodName}" VerticalOptions="Center"/>
                            <Label Text="{Binding Product.FoodPrice, StringFormat='Price: {0:C}'}" VerticalOptions="Center"/>
                            <Label Text="Quantity: " VerticalOptions="Center"/>
                            <Entry Text="{Binding Quantity}" Keyboard="Numeric"/>
                            <Button Text="Remove" Clicked="OnRemoveClicked"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Label Text="{Binding TotalPrice, StringFormat='Total Price: {0:C}'}"/>
    </StackLayout>

</ContentPage>